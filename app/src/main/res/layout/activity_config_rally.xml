<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="afterDescendants"
    android:focusableInTouchMode="true"
    android:padding="24dp"
    tools:context=".activities.ConfigRallyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTituloConfig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="24dp"
            android:text="@string/titulo_configuracion"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/titulo_inicio"
            android:paddingTop="12dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etTituloInicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Ej: Bienvenido al Rally Fotográfico"
            android:inputType="text" />

        <EditText
            android:id="@+id/etImagenInicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Ej: Enlace foto portada"
            android:inputType="text"
            android:focusable="false"
            android:longClickable="true"
            android:textIsSelectable="true" />

        <!-- PARTICIPANTES -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="24dp"
            android:text="@string/seccion_participantes"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etMensajeParticipante"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/hint_mensaje_participante"
            android:inputType="textMultiLine"
            android:minLines="2" />

        <EditText
            android:id="@+id/etTamanoMaximo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/hint_tamano_maximo"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/etResolucion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/hint_resolucion"
            android:inputType="text" />

        <EditText
            android:id="@+id/etTipoImagen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/hint_tipo_imagen"
            android:inputType="text" />

        <EditText
            android:id="@+id/etFechaLimite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:focusable="false"
            android:hint="@string/hint_fecha_limite" />

        <EditText
            android:id="@+id/etLimiteFotos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/hint_limite_fotos"
            android:inputType="number" />

        <!-- PÚBLICO -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="24dp"
            android:text="@string/seccion_publico"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etMensajePublico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/hint_mensaje_publico"
            android:inputType="textMultiLine"
            android:minLines="2" />

        <EditText
            android:id="@+id/etFechaInicioVotacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:focusable="false"
            android:hint="@string/hint_fecha_inicio_votacion" />

        <EditText
            android:id="@+id/etFechaFinVotacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:focusable="false"
            android:hint="@string/hint_fecha_fin_votacion" />

        <!-- Número de votos del público -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:text="Votos por usuario del público"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etVotosPublico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Ej: 3"
            android:inputType="number" />

        <!-- BOTONES -->
        <Button
            android:id="@+id/btnGuardarConfig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="?attr/colorPrimary"
            android:padding="12dp"
            android:text="@string/btn_guardar_config"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnLimpiarCampos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/colorSecondary"
            android:padding="12dp"
            android:text="@string/btn_limpiar_campos"
            android:textColor="@android:color/white"
            android:visibility="gone" />
    </LinearLayout>
</ScrollView>
